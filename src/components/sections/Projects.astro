---
import Section from '@/components/Section.astro'

import { projects } from '@cv'
---

<Section title="Proyectos">
	<ul>
		{projects.map(({name, isActive, description, highlights, url}) => {
			return (
				<li>
					<article>
						<header>
							<div>
								<a href={url} title="Ver el proyecto" target="_blank">
									<h3>{name}</h3>
								</a>
								<span class={`c--${isActive ? 'active' : 'inactive'}`}>&bull;</span>
							</div>
							<p>{description}</p>
						</header>
						<footer>
							{highlights.map((highlight) => {
								return (
									<span>{highlight}</span>
								)
							})}
						</footer>
					</article>
				</li>
			)
		})}
	</ul>
</Section>

<style>
	ul{
		display: grid;
		grid-template-columns: repeat(
			auto-fit,
			minmax(300px, 1fr)
		);
		gap: 1rem;
	}

	article{
		border-radius: 8px;
		border: 1px solid #f2f2f2;
		gap: 16px;
		display: flex;
		flex-direction: column;
		padding: 16px;
		height: 100%;
	}

	article a{
		display: inline-block;
		color: #111;
	}

	article a:hover{
		text-decoration: underline;
	}

	header{
		flex: 1;
	}

	header div{
		display: flex;
		align-items: center;
		margin-bottom: 0.5rem;
	}

	header span{
		font-size: 1.5rem;
		margin-left: 0.5rem;
	}

	footer{
		display: inline-flex;
		gap: 8px;
		flex-wrap: wrap;
		margin-top: 0.2rem;
	}

	footer span{
		border-radius: 6px;
		background: #eee;
		color: black;
		font-size: 0.8rem;
		font-weight: 500;
		padding: 0.2rem 0.6rem;
	}

	footer span:hover{
		background: #ddd;
		cursor: default;
	}

	.c--active{
		color: #00b894;
	}

	.c--inactive{
		color: #ccc;
	}
</style>